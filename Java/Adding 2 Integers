import java.util.Scanner;  // Import the Scanner class

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int x, y, sum;
        do {
            System.out.println("Please enter the first integer number");
            while (!sc.hasNextInt()){
                System.out.println("Please Enter a Valid Value. Please enter the first integer number");
                sc.next();
            }
                x = sc.nextInt();
                System.out.println("Please enter the second integer number");
                while (!sc.hasNextInt()){
                    System.out.println("Please Enter a Valid Value. Please enter the second integer number");
                    sc.next();
                }
                y = sc.nextInt();
                sum = x + y;
                System.out.println("SUM: " + sum);
        } while (!sc.hasNextInt());
    }
    }
